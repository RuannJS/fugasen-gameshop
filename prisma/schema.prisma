// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum GameCategory {
  action
  rpg
  strategy
  aventure
  simulation
  sports
}

model Game {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  thumbnail     String
  images        String[]
  price         Float
  isDiscount    Boolean
  discountPrice Float
  launchDate    DateTime @default(now())

  users   User[]   @relation(fields: [usersId], references: [id])
  usersId String[] @db.ObjectId

  rating   Rating[]
  ratingId String[] @db.ObjectId

  publisher   Publisher @relation(fields: [publisherId], references: [id])
  publisherId String    @db.ObjectId
}

model User {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  username   String
  profileImg String
  email      String @unique
  password   String

  games   Game[]   @relation(fields: [gamesId], references: [id])
  gamesId String[] @db.ObjectId

  rating   Rating[]
  ratingId String[]

  friends Friend[]
}

model Publisher {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  publisherKey String?
  thumbnail    String

  games   Game[]
  gamesId String[]
}

model Rating {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  description String

  game   Game   @relation(fields: [gameId], references: [id])
  gameId String @db.ObjectId

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

model Friend {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}
